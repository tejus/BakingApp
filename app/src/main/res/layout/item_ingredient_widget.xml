<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_overview_item_height"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_ingredient_widget_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/detail_margin"
        android:layout_toStartOf="@+id/item_ingredient_widget_quantity"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textColor="@color/colorGrey"
        tools:text="Bittersweet chocolate (60-70% cacao)" />

    <TextView
        android:id="@+id/item_ingredient_widget_quantity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="@dimen/detail_margin"
        android:gravity="center_vertical"
        android:maxLines="@integer/detail_overview_item_lines"
        android:textColor="@color/colorGrey"
        tools:text="250g" />
</RelativeLayout>
