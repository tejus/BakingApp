<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bottom_sheet_ingredients"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_primary"
                android:gravity="center"
                android:onClick="onClickIngredients"
                android:text="Ingredients"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_bottom_sheet_steps"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_primary"
                android:gravity="center"
                android:onClick="onClickSteps"
                android:text="Steps"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="@color/colorGrey"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_overview_back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="0"
                android:background="@drawable/ripple_primary"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickBack"
                android:scaleType="center"
                android:src="@drawable/baseline_chevron_left_white_24"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onClickOverview"
                android:text="@string/detail_overview"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_overview_forward"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="0"
                android:background="@drawable/ripple_primary"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickForward"
                android:scaleType="center"
                android:src="@drawable/baseline_chevron_right_white_24"
                android:tint="@color/colorAccent" />
        </LinearLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />
</LinearLayout>
